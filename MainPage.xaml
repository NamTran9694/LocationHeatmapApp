<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationHeatmapApp.MainPage">

    <Grid RowDefinitions="Auto,Auto,*" Padding="12" RowSpacing="10">

        <!-- Header / Buttons -->
        <VerticalStackLayout Grid.Row="0" Spacing="8">
            <Label Text="Location Heatmap App"
                FontSize="22"
                FontAttributes="Bold"/>

            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <Button Text="Start" Clicked="OnStartClicked" Grid.Column="0"/>
                <Button Text="Stop" Clicked="OnStopClicked" Grid.Column="1"/>
                <Button Text="Refresh" Clicked="OnRefreshClicked" Grid.Column="2"/>
                <Button Text="Clear" Clicked="OnClearClicked" Grid.Column="3"/>
            </Grid>

            <Label x:Name="StatusLabel" Text="Ready." FontSize="14"/>
        </VerticalStackLayout>

        <!-- Radius row: add background + padding + fixed height -->
        <Border Grid.Row="1"
                Padding="8"
                StrokeThickness="0"
                BackgroundColor="#F2F2F2">

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                <!-- Fixed width label -->
                <Label Text="Radius:"
                    WidthRequest="80"
                    VerticalOptions="Center"
                    FontSize="14"/>

                <!-- Slider takes remaining space -->
                <Slider x:Name="RadiusSlider"
                        Minimum="50"
                        Maximum="500"
                        Value="200"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center"/>

                <!-- Fixed width value -->
                <Label x:Name="RadiusValueLabel"
                    Text="200"
                    WidthRequest="50"
                    HorizontalTextAlignment="Center"
                    VerticalOptions="Center"
                    FontSize="14"/>

            </HorizontalStackLayout>
        </Border>

        <!-- Map -->
        <maps:Map x:Name="MapControl"
                Grid.Row="2"
                MapType="Street"
                IsShowingUser="True" />

    </Grid>
</ContentPage>
